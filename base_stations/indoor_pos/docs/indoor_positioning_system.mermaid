graph TD
    subgraph Room
        P[Person with AprilTag]
        C1[Camera 1]
        C2[Camera 2]
        C3[Camera 3]
        C4[Camera 4]
    end
    
    R1[Raspberry Pi 5]
    R2[Raspberry Pi 5]
    R3[Raspberry Pi 5]
    R4[Raspberry Pi 5]
    
    M[Mac - RTMP Server]
    CV[Computer Vision Processing]
    
    C1 --> R1
    C2 --> R2
    C3 --> R3
    C4 --> R4
    
    R1 -->|Video Stream| M
    R2 -->|Video Stream| M
    R3 -->|Video Stream| M
    R4 -->|Video Stream| M
    
    M --> CV
    CV -->|Localization Data| O[Output: Position & Orientation]
    
    P -.->|Tracked by| C1
    P -.->|Tracked by| C2
    P -.->|Tracked by| C3
    P -.->|Tracked by| C4
    
    classDef camera fill:#85C1E9,stroke:#3498DB,stroke-width:2px;
    classDef raspberry fill:#FF6B6B,stroke:#E74C3C,stroke-width:2px;
    classDef mac fill:#82E0AA,stroke:#27AE60,stroke-width:2px;
    classDef person fill:#F7DC6F,stroke:#F1C40F,stroke-width:2px;
    
    class C1,C2,C3,C4 camera;
    class R1,R2,R3,R4 raspberry;
    class M,CV mac;
    class P person;
